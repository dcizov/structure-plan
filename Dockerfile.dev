FROM node:22-alpine as base

WORKDIR /usr/src/app
EXPOSE 3000

# Install dependencies (including dev ones)
COPY package*.json ./
RUN npm ci

# Copy source
COPY . .

# Use non-root user
RUN addgroup -S nodejs && adduser -S nextjs -G nodejs
# Fix permissions for the working directory
RUN chown -R nextjs:nodejs /usr/src/app
USER nextjs

ENV NODE_ENV=development
# Enable webpack hot reload for containerized environment
ENV WATCHPACK_POLLING=true

CMD ["npm", "run", "dev"]
